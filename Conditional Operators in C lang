#include <stdio.h>
int checkalphabets(char a){
    if((a>='a') && (a<='z'))
        return 1;
    else if((a>='A') && (a<='Z'))
        return 2;
    else
        return 3;
}
int main()
{
    int mon;
    mon = checkalphabets('x');
    switch(mon)
    {
        case 1:
            printf("small letter");break;
        case 2:
            printf("capital letter");break;
        case 3:
            printf("special char");break;
        default:
            printf("Invalid Input");break;
    }
}


