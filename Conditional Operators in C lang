#include<stdio.h>

int equalornot(int a,int b){
    if(a==b)
        {
            return 1;
        }
    else
        {
            return 0;
        }
}
int main()
{   
    int result;
    result=equalornot(9,2);
    if(result==1)
        printf("Both are equal");
    else
        printf("Not equal");
}


#include<stdio.h>

int eveorodd(int a){
    if(a%2==0)
        {
            return 1;
        }
    else
        {
            return 0;
        }
}
int main()
{   
    int result;
    result=eveorodd(80);
    if(result==1)
        printf("Even");
    else
        printf("Odd");
}


#include<stdio.h>

int negposzero(int a){
    if(a>0)
        {
            return 2;
        }
    else if(a=0)
        {
            return 1;
        }
    else
        {
            return 0;
        }
}
int main()
{   
    int result;
    result=negposzero(0);
    if(result==2)
        printf("The number is positive");
    else if(result==1)
        printf("The number is equal to zero");
    else
        printf("The number is negative");
}


